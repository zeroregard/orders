{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "node -r ts-node/register src/index.ts",
    "watch": "nodemon --exec node -r ts-node/register src/index.ts",
    "build": "tsc",
    "prebuild": "pnpm db:generate || echo 'Prisma generation skipped' && pnpm generate:schemas",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:e2e": "jest --testPathPatterns=e2e",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:verify": "ts-node scripts/verify-db-persistence.ts",
    "generate:schemas": "ts-node scripts/generate-openapi.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "6.10.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/web-push": "^3.6.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "google-auth-library": "^10.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.1",
    "prisma": "^6.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jest": "30.0.2",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
